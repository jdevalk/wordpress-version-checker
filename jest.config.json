{
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*",
		"!src/index.ts"
	],
	"coverageDirectory": "coverage",
	"coverageProvider": "babel",
	"setupFiles": ["<rootDir>/__tests__/setup.ts"],
	"transform": {
		"^.+\\.ts$": [
			"ts-jest",
			{
				"tsconfig": "test.tsconfig.json"
			}
		]
	},
	"resetMocks": true,
	"testMatch": ["<rootDir>/__tests__/**/*.test.ts"]
}
